{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node"],
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "target": "ES2017",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["src/**/*", "src/global.d.ts"]
}
